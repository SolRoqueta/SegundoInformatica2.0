ACA ESTA EL SCRIPT SQL PARA LA CREACION DE LA BASE DE DATOS

-- DROP DATABASE `cantina_daniela` ;
CREATE SCHEMA `cantina_daniela` ;

USE `cantina_daniela`;

CREATE TABLE `cantina_daniela`.`productos` (
  `id_productos` INT NOT NULL AUTO_INCREMENT,
  `nombre` VARCHAR(45) NOT NULL,
  `precio` INT NOT NULL,
  `descripcion` LONGTEXT NULL,
  `foto` MEDIUMBLOB NOT NULL,
  PRIMARY KEY (`id_productos`),
  UNIQUE INDEX `nombre_unico` (`nombre` ASC) VISIBLE);
  
  CREATE TABLE `cantina_daniela`.`menus_fijos` (
  `idmenus_fijos` INT NOT NULL AUTO_INCREMENT,
  `nombre` VARCHAR(45) NOT NULL,
  `precio` INT NOT NULL,
  `descripcion` LONGTEXT NULL,
  `foto` MEDIUMBLOB NOT NULL,
  `stock` INT NOT NULL,
  PRIMARY KEY (`idmenus_fijos`));
  
  CREATE TABLE `cantina_daniela`.`menus_diarios` (
  `idmenus_diarios` INT NOT NULL AUTO_INCREMENT,
  `nombre` VARCHAR(45) NOT NULL,
  `precio` INT NOT NULL,
  `descripcion` LONGTEXT NULL,
  `foto` MEDIUMBLOB NOT NULL,
  `dia_correspondiente` VARCHAR(45) NOT NULL,
  `stock` INT NOT NULL,
  PRIMARY KEY (`idmenus_diarios`));
  
  CREATE TABLE `cantina_daniela`.`usuarios` (
  `idusuarios` INT NOT NULL AUTO_INCREMENT,
  `nombre` VARCHAR(45) NOT NULL,
  `contrasenia` VARCHAR(45) NOT NULL,
  `fecha_ultimo_acceso` DATE NOT NULL,
  `tipo_usuario` VARCHAR(45) NOT NULL,
  `mail` VARCHAR(45) NOT NULL,
  PRIMARY KEY (`idusuarios`));
  
  CREATE TABLE `cantina_daniela`.`clientes` (
  `idclientes` INT NOT NULL AUTO_INCREMENT,
  `fk_nombre_completo` INT NOT NULL,
  `saldo` INT NOT NULL,
  `numero_telefono` VARCHAR(45) NOT NULL,
  PRIMARY KEY (`idclientes`),
  INDEX `fk_a_usuarios_idx` (`fk_nombre_completo` ASC) VISIBLE,
  CONSTRAINT `fk_a_usuarios`
    FOREIGN KEY (`fk_nombre_completo`)
    REFERENCES `cantina_daniela`.`usuarios` (`idusuarios`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION);

    CREATE TABLE `cantina_daniela`.`movimientos` (
  `idmovimientos` INT NOT NULL AUTO_INCREMENT,
  `fk_id_clientes` INT NOT NULL,
  `credito_debito` TINYINT NOT NULL,
  PRIMARY KEY (`idmovimientos`),
  INDEX `fk_id_cleientes_idx` (`fk_id_clientes` ASC) VISIBLE,
  CONSTRAINT `fk_a_id_clientes`
    FOREIGN KEY (`fk_id_clientes`)
    REFERENCES `cantina_daniela`.`clientes` (`idclientes`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION);
    
CREATE TABLE `cantina_daniela`.`pagos` (
  `idpagos` INT NOT NULL AUTO_INCREMENT,
  `fk_id_clientes` INT NOT NULL,
  `monto` INT NOT NULL,
  `fecha` DATE NOT NULL,
  PRIMARY KEY (`idpagos`),
  INDEX `fk_a_id_clientes_idx` (`fk_id_clientes` ASC) VISIBLE,
  CONSTRAINT `fk_a_id_clientess`
    FOREIGN KEY (`fk_id_clientes`)
    REFERENCES `cantina_daniela`.`clientes` (`idclientes`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION);
    
    CREATE TABLE `cantina_daniela`.`pedidos` (
  `idpedidos` INT NOT NULL AUTO_INCREMENT,
  `fk_id_menus_diarios` INT NOT NULL,
  `fk_id_clientes` INT NOT NULL,
  `total` INT NOT NULL,
  PRIMARY KEY (`idpedidos`),
  INDEX `fk_id_menus_diarios_idx` (`fk_id_menus_diarios` ASC) VISIBLE,
  INDEX `fk_id_clientes_idx` (`fk_id_clientes` ASC) VISIBLE,
  CONSTRAINT `fk_id_menus_diarios`
    FOREIGN KEY (`fk_id_menus_diarios`)
    REFERENCES `cantina_daniela`.`menus_diarios` (`idmenus_diarios`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION,
  CONSTRAINT `fk_id_clientes`
    FOREIGN KEY (`fk_id_clientes`)
    REFERENCES `cantina_daniela`.`clientes` (`idclientes`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION);
    
CREATE TABLE `cantina_daniela`.`alumnos` (
  `idalumnos` INT NOT NULL AUTO_INCREMENT,
  `nombre_completo` VARCHAR(45) NOT NULL,
  `grupo` VARCHAR(45) NOT NULL,
  `foto` MEDIUMBLOB NOT NULL,
  `fk_id_clientes` INT NOT NULL,
  PRIMARY KEY (`idalumnos`),
  INDEX `fk_a_id_clientes_idx` (`fk_id_clientes` ASC) VISIBLE,
  CONSTRAINT `fk_aa_id_clientes`
    FOREIGN KEY (`fk_id_clientes`)
    REFERENCES `cantina_daniela`.`clientes` (`idclientes`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION);
    
    CREATE TABLE `cantina_daniela`.`items_pedidos` (
  `iditems_pedidos` INT NOT NULL AUTO_INCREMENT,
  `fk_id_alumnos` INT NOT NULL,
  `fk_id_pedidos` INT NOT NULL,
  `fk_id_menu_diario` INT NOT NULL,
  PRIMARY KEY (`iditems_pedidos`),
  INDEX `fk_id_alumons_idx` (`fk_id_alumnos` ASC) VISIBLE,
  INDEX `fk_id_pedidos_idx` (`fk_id_pedidos` ASC) VISIBLE,
  INDEX `fk_id_menu_diario_idx` (`fk_id_menu_diario` ASC) VISIBLE,
  CONSTRAINT `fk_id_alumons`
    FOREIGN KEY (`fk_id_alumnos`)
    REFERENCES `cantina_daniela`.`alumnos` (`idalumnos`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION,
  CONSTRAINT `fk_id_pedidos`
    FOREIGN KEY (`fk_id_pedidos`)
    REFERENCES `cantina_daniela`.`pedidos` (`idpedidos`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION,
  CONSTRAINT `fk_id_menu_diario`
    FOREIGN KEY (`fk_id_menu_diario`)
    REFERENCES `cantina_daniela`.`menus_diarios` (`idmenus_diarios`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION);
    
    CREATE TABLE `cantina_daniela`.`menus_semanales` (
  `idmenus_semanales` INT NOT NULL AUTO_INCREMENT,
  `fecha_desde` DATE NOT NULL,
  `feche_hasta` DATE NOT NULL,
  PRIMARY KEY (`idmenus_semanales`));
  
  CREATE TABLE `cantina_daniela`.`grupos` (
  `idgrupos` INT NOT NULL AUTO_INCREMENT,
  `nombre_grupo` VARCHAR(45) NOT NULL,
  PRIMARY KEY (`idgrupos`));